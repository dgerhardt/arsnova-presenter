<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

<modelVersion>4.0.0</modelVersion>
<groupId>de.thm.arsnova</groupId>
<artifactId>arsnova-presenter</artifactId>
<version>1.0.0-SNAPSHOT</version>
<packaging>war</packaging>
<name>ARSnova Presenter</name>
<description>ARSnova presentation client for desktop browsers.</description>
<url>http://blog.mni.thm.de/arsnova/arsnova-blog/</url>

<developers>
	<developer>
		<name>Prof. Dr. Klaus Quibeldey-Cirkel</name>
		<organization>Technische Hochschule Mittelhessen</organization>
		<organizationUrl>http://www.thm.de</organizationUrl>
		<roles>
			<role>project manager</role>
		</roles>
		<url>http://www.quibeldey-cirkel.de</url>
	</developer>
	<developer>
		<name>Daniel Gerhardt</name>
		<organization>Technische Hochschule Mittelhessen</organization>
		<organizationUrl>http://www.thm.de</organizationUrl>
		<roles>
			<role>architect</role>
			<role>developer</role>
		</roles>
		<url>http://www.dgerhardt.net</url>
	</developer>
</developers>

<properties>
	<outputDir>${project.build.directory}/${project.artifactId}-${project.version}/</outputDir>
	<jetty.version>8.1.9.v20130131</jetty.version>
	<jetty.groupId>org.mortbay.jetty</jetty.groupId>
	<jetty.scanInterval>10</jetty.scanInterval>
</properties>

<dependencies>
	<!--
	<dependency>
		<groupId>de.thm.arsnova</groupId>
		<artifactId>arsnova-war</artifactId>
		<version>2.0.0-SNAPSHOT</version>
		<type>war</type>
	</dependency>
	-->
	<dependency>
		<groupId>org.dojotoolkit</groupId>
		<artifactId>dojo</artifactId>
		<version>1.8.1</version>
		<type>pom</type>
	</dependency>
</dependencies>

<build>
	<plugins>
		<plugin>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-resources-plugin</artifactId>
			<version>2.6</version>
			<executions>
				<execution>
					<id>copy-vendor-resources</id>
					<phase>validate</phase>
					<goals>
						<goal>copy-resources</goal>
					</goals>
					<configuration>
						<outputDirectory>${outputDir}</outputDirectory>
						<resources>
							<resource>
								<directory>vendor/socket.io-client/dist/</directory>
								<targetPath>lib/socket.io/</targetPath>
							</resource>
						</resources>
					</configuration>
				</execution>
				<!--
				<execution>
					<id>replace-placeholders</id>
					<phase>validate</phase>
					<goals>
						<goal>copy-resources</goal>
					</goals>
					<configuration>
						<outputDirectory>${outputDir}</outputDirectory>
						<resources>
							<resource>
								<directory>src/main/resources/</directory>
								<includes>
									<include>config.json</include>
								</includes>
								<filtering>true</filtering>
							</resource>
						</resources>
					</configuration>
				</execution>
				-->
			</executions>
		</plugin>
		<plugin>
			<groupId>${jetty.groupId}</groupId>
			<artifactId>jetty-maven-plugin</artifactId>
			<version>${jetty.version}</version>
			<configuration>
				<scanIntervalSeconds>${jetty.scanInterval}</scanIntervalSeconds>
				<webApp>
					<contextPath>/</contextPath>
				</webApp>
			</configuration>
		</plugin>
	</plugins>
</build>

</project>
